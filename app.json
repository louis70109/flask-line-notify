{
  "name": "flask-line-notify",
  "env": {
    "LINE_CLIENT_ID": {
      "description": "LINE Bot access token",
      "value": "ooooo",
      "required": true
    },
    "LINE_CLIENT_SECRET": {
      "description": "LINE Bot secret",
      "value": "xxxx",
      "required": true
    },
    "LINE_REDIRECT_URI": {
      "description": "API environment",
      "value": "production",
      "required": true
    }
  },
  "options": {
    "allow-unauthenticated": true,
    "memory": "256Mi",
    "cpu": "1",
    "port": 8080,
    "http2": false,
    "concurrency": 3,
    "max-instances": 1
  }
}
